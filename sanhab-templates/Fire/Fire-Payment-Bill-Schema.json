{
     "$schema": "https://json-schema.org/draft/2020-12/schema",
     "$id": "https://json-schema.org/draft/2020-12/schema",
     "type": "object",
     "required": ["CmpDocNo","FirDocLosCod","PayDte","Hvno","Amnt","CurCod","LosRcvTypCod","HvTypCod",
       "IsCncl","IsFrgn"],
     "additionalProperties": true,

     "properties": {
            "CmpDocNo": {"type": "string","description": "کد یونیک حواله خسارت در شرکت"},
            "FirDocLosCod": {"type": "number","description": "کد یکتا پرونده خسارت"},
            "PayDte": {"type": "string","description": "تاریخ صدور حواله خسارت"},
            "LglRefDte": {"type": ["string","null"],"description": "تاریخ مراجعه به مراجع قانونی"},
            "Hvno": {"type": "number","description": "شماره حواله خسارت"},
            "Amnt": {"type": "number","description": "مبلغ کل خسارت"},
            "PayAmnt": {"type": ["number","null"],"description": "مبلغ خسارت پرداخت شده"},
            "Rcy": {"type": ["number","null"],"description": "هزینه بازیافت"},
            "CurCod": {"type": "number","description": "کد ارز"},
            "Frnshz": {"type": ["number","null"],"description": "فرانشیز"},
            "LosRcvTypCod": {"type": "number","description": "کد نوع گیرنده خسارت"},
            "HvTypCod": {"type": "number","description": "کد نوع حواله"},
            "IsCncl": {"type": "boolean","description": "ابطالی است؟"},
            "RcvFNam": {"type": ["string","null"],"description": "نام گیرنده حقیقی"},
            "RcvLNam": {"type": ["string","null"],"description": "نام خانوادگی گیرنده حقیقی"},
            "RcvNtnlId": {"type": ["number","null"],"description": "کد ملی گیرنده حقیقی"},
            "RcvBrthDte": {"type": ["DateTime","null"],"description": "تاریخ تولد گیرنده حقیقی"},
            "RcvLglId": {"type": ["number","null"],"description": "شناسه ملی گیرنده حقوقی"},
            "RcvLglNam": {"type": ["string","null"],"description": "نام گیرنده حقوقی"},
            "PsprtNo": {"type": ["string","null"],"description": "شماره پاسپورت"},
            "IsFrgn": {"type": "boolean","description": "خارجی است؟"},
            "LosGoods": {"type": "array","items": {"$ref": "#/$defs/LosGood"}},
            "firLosCvrs": {"type": "array","items": {"$ref": "#/$defs/FirLosCvr"}},
            "CurrencySource": {"type": ["number","null"],"description": "منشا ارز"},
            "RcvShebaNo": {"type": ["string","null"],"description": "شماره شبای گیرنده حواله خسارت"},
            "CardexInqCode": {"type": ["number","null"],"description": "کد استعلام انبار"},
            "losCardexGoods": {"type": "array","items": {"$ref": "#/$defs/LosCardexGood"}}
     } ,

    "$defs" : {
		"LosGood" : {
		    "type": "object",
	    	"required" : ["CvrCod"],
		    "additionalProperties": true,
		    "properties": {
                  "InsrdCmpDocNo": {"type": "string","description": "کد یکتا مورد بیمه نامه در شرکت"},
                  "CvrCod": {"type": "number","description": "کد پوشش"},
                  "PayAmnt": {"type": "number","description": "مبلغ خسارت پرداخت شده"}
            }
        },
        "FirLosCvr" : {
           "type": "object",
           "required": ["CvrCod"],
           "additionalProperties": true,
           "properties": {
              "InsrdCmpDocNo": {"type": "string","description": "کد یکتا مورد بیمه نامه در شرکت"},
              "CvrCod": {"type": "number","description": "کد پوشش"},
              "PayAmnt": {"type": "number","description": "مبلغ خسارت پرداخت شده"}
            }
        },
       "LosCardexGood" : {
           "type": "object",
           "required" : [ "CardexCode"],
           "additionalProperties": true,
           "properties": {
               "CardexCode":{"type":"number","description":"کد کالا"},
               "GoodsDesc":{"type":["string","null"],"description":"نام کالا"},
               "GoodsId":{"type":["string","null"],"description":"شناسه کالا"},
               "MeasurementUnit":{"type":["string","null"],"description":"واحد اندازه گیری : 1- کیلوگرم, 2- تن, 3- تعداد , 4- گرم :"},
               "ModifyDate":{"type":["string","null"],"description":"تاریخ ویرایش "},
               "ProductionType":{"type":["string","null"],"description":"نوع تولید"},
               "RemovableCount":{"type":["number","null"],"description":"مقدار موجودی کالا"}
           }
      }

   }
}
