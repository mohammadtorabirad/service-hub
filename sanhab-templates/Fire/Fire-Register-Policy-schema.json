          "additionalProperties": true,
		  "properties": {
              "InsrdCmpDocNo":{"type":"string","description":"کد یکتای مورد بیمه در شرکت"},
              "ActTypCod":{"type":"number","description":"نوع مورد بیمه"},
              "InsrdTypCod":{"type":["number","null"],"description":"کد استاندارد موضوع فعالیت مورد بیمه(شرح موضوع بیمه)"},
