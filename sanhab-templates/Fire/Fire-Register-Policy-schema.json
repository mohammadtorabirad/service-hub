              "InsrdCtyCod":{"type":["number","null"],"description":"شهر مورد بیمه"},
              "MPL":{"type":["number","null"],"description":"درصد MPL"},
              "EML":{"type":["number","null"],"description":"درصد EML"},
              "PrdYr":{"type":["number","null"],"description":"سال ساخت مورد بیمه"},
              "InsrdAdrs":{"type":["string","null"],"description":"آدرس محل مورد بیمه"},
              "Dscr":{"type":["string","null"],"description":"شرح مورد بیمه"},
              "WrhInqCod":{"type":"number","description":"کد پیگیری استعلام از سامانه جامع انبارها"},
              "Prm":{"type":"number","description":"حق بیمه بیمه نامه/الحاقیه"},
              "CurCod":{"type":"number","description":"کد ارز حق بیمه بیمه نامه/الحاقیه"},
              "CptlLmt":{"type":"number","description":"حداکثر تعهد بیمه نامه/الحاقیه"},
              "CptlLmtCurCod":{"type":"number","description":"کد ارز حداکثر تعهد بیمه نامه/الحاقیه"},
              "Cptl":{"type":"number","description":"سرمایه بیمه نامه/الحاقیه"},
              "CptlCurCod":{"type":"number","description":"کد ارز سرمایه بیمه نامه/الحاقیه"}
          }
		} ,

