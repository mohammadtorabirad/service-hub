         "PrntEdrsCmpDocNo":{"type":["string","null"],"description":"شماره چاپی الحاقیه در شرکت بیمه"},
         "PlcyTypCod":{"type":"number","description":"کد نوع بیمه نامه"},
         "BgnDte":{"type":"string","description":"تاریخ شروع"},
         "EndDte":{"type":"string","description":"تاریخ پایان"},
         "IsuDte":{"type":"string","description":"تاریخ صدور"},
