          "type": "object",
          "required" : [ "InsTypCod","PrsnTypCod","IsFrgn"],
          "properties": {
               "InsTypCod":{"type":"number","description":"کد نوع بیمه گذار"},
               "PrsnTypCod":{"type":"number","description":"کد نوع شخصیت"},
               "LglNam":{"type":["string","null"],"description":"نام حقوقی"},
               "LglId":{"type":["number","null"],"description":"شناسه ملی حقوقی"},
               "Nam":{"type":["string","null"],"description":"نام حقیقی"},
               "LNam":{"type":["string","null"],"description":"نام خانوادگی حقیقی"},
               "CtyId":{"type":["number","null"],"description":"کد شهر آدرس"},
               "Adrs":{"type":["string","null"],"description":"آدرس"},
               "Tel":{"type":["string","null"],"description":"تلفن"},
               "Mbl":{"type":["string","null"],"description":"موبایل"},
               "ZipCod":{"type":["number","null"],"description":"کد"},
               "NtnlId":{"type":["number","null"],"description":"کد ملی حقیقی"},
               "BrthDate":{"type":["string","null"],"description":"تاریخ تولد حقیقی"},
               "PsprtNo":{"type":["string","null"],"description":"شماره پاسپورت"},
               "IsFrgn":{"type":"boolean","description":"خارجی است؟"}
          }
        },
        "FirPlcyPay" : {
          "type": "object",
          "required" : [ "Val","ToPayDte","PayNo","AncDte"],
