               "AncDte":{"type":"string","description":"تاریخ اعلام اطلاعات اقساط و وصول آنها"},
               "RctDte":{"type":["string","null"],"description":"تاریخ وصول"}
          }
        },
        "FirPlcyGoodsGroupsLevelOne" : {
          "type": "object",
          "properties": {
			  "GoodsId":{"type":["number","null"],"description":"شناسه کالا"}            
          }
