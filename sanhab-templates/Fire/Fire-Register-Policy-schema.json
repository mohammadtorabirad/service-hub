         "RslCnt":{"type":["number","null"],"description":"تعداد ریسک تفکیکی"},
         "IsRsl":{"type":"Boolean","description":"قابلیت تفکیک-Resolution"},
         "CptlRsk":{"type":["number","null"],"description":"سرمایه بزرگترین ریسک (حداکثر تعهد)"},
