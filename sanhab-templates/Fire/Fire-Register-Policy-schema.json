              "CmpInsrdTypDscrp":{"type":"string","description":"شرح موضوع فعالیت مورد بیمه(شرح موضوع بیمه) در شرکت بیمه"},
              "StnSpc":{"type":["number","null"],"description":"فاصله ایستگاه آتش نشانی تا محل مورد بیمه"},
              "StnTm":{"type":["number","null"],"description":"فاصله زمانی ایستگاه آتش نشانی تا محل مورد بیمه"},
              "BldTypCod":{"type":"number","description":"کد نوع سازه مورد بیمه"},
              "CptlTypCod":{"type":"number","description":"کد نوع سرمایه مورد بیمه"},
