		"FirPlcyCns" : {
		  "type": "object",
		  "required" : [ "CnsCmpCod","CnsShre"],
		  "additionalProperties": true,
		  "properties": {
		  	"CnsCmpCod": {"type" : "number"  , "description" : "کد شرکت عضو کنسرسیوم"},
		  	"CnsShre" : {"type" : "number" , "description"  : "درصد سهم شرکت بیمه از مشترک(کنسرسیوم)"}
          }
		} ,

		"FirPlcyCvr" : {
